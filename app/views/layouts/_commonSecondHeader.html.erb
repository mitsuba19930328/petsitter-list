
<!-- ペットシッター詳細関連画面のヘッダー下共通部分 -->
<header class="page-header second-header-wrapper">
    <%= render "shared/breadcrumbs" %>
  <div class="cover-img">
    <%= image_tag("greenleaves.jpg" ) %>
  </div>
  <div class="content-container">
    <% if current_user.image.blank? %>
      <%= image_tag 'default.jpg', class:'test-user' %>
    <% else %>
      <%= image_tag current_user.image.url, class:'test-user' %>
    <% end %>
    <%#= image_tag("136x136.png", class:'image-icon') %>
    <div class="user-content-area">
      <span class="user-content-area_title"><%= @user.name %>さんのマイページ</span>
      <ul class="user-content-nav">
        <li class="user-content-nav-link first-nav"><%= link_to "トップ", user_path(@user.id) %></li>
        <li class="user-content-nav-link"><%= link_to "行ったお店", user_histories_path(@user.id) %></li>
        <li class="user-content-nav-link"><%= link_to "保存済み", user_clips_path(@user.id) %></li>
        <% if ensure_current_user %>
        <li class="user-content-nav-link"><%= link_to "設定", edit_user_path(current_user) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
<div class="user-header-line"></div>