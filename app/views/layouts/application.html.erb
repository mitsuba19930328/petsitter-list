<!DOCTYPE html>
<html>
  <head>
    <title>PetsitterList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- file_fieldの画像プレビューを見れるようにする（保留） -->
<!--    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>-->
    <!-- stylesheetとjavascriptを使用できるようにするためのimport文-->
    <%= include_gon %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- ヘッダーメニュー -->
    <% if current_page?(root_path) %>
      <%= render partial: 'tops/indexHeader' %>
    <% else %>
      <%= render partial: 'layouts/commonHeader' %>
      <% if user_signed_in? %>
        <%#= render partial: 'layouts/commonSecondHeader' %>
      <% end %>
    <% end %>

    <!-- トップページ用ボディ&フッター部分 -->
    <% if current_page?(root_path) %>
    <div id="wrap">
      <div id="index-contents">
        <h2>
          <%= yield %>
        </h2>
      </div>
      <!-- 以下、トップページ用サイドナビ -->
        <%= render partial: 'tops/sidenavi' %>
      <!-- 以下、フッター -->
    </div>
    <%= render partial: 'layouts/footer' %>
    <% end %>

    <!-- トップページ以外のボディ&フッター -->
    <% unless current_page?(root_path) %>
    <div id="wrap">
      <div id="body-contents">
        <h2>
          <%= yield %>
        </h2>
      </div>
    </div>
    <!-- 以下、フッター -->
    <%= render partial: 'layouts/footer' %>
    <% end %>
  </body>
</html>
