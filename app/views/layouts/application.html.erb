                <%=link_to image_tag("136x136.png"), root_path, class:'store-icon'%>
                <div class="bookmark_store_info">
                  <div class="bookmark_store_info_name">テスト店ABCDDOOOO</div>
                  <div class="bookmark_store_info_area">六本木</div>
