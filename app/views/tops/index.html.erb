<h1>トップページ</h1>

<% if current_user %>
  <div>
    <p>ログイン中ユーザー</p>
    <ul>
      <li><%= @user.name %></li>
      <li><%= @user.email %></li>
    </ul>
  </div>
<% end %>

<div>
  <p>ユーザー一覧</p>
  <ul>
    <% @users.each do |user| %>
      <li><%= user.id %></li>
      <li><%= user.name %></li>
      <li><%= user.email %></li>
    <% end %>
  </ul>
</div>