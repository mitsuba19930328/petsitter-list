
<!-- indexページ用headerHTML -->
<div id="home" class="big-bg">
  <header class="page-header wrapper">
    <h1><%=link_to image_tag("logo.png", class: 'logo' ), root_path%></h1>
    <nav>
      <ul class="index-main-nav">
        <% if current_user %>
          <!-- ログイン中ユーザー用メニュー -->
          <li><%= link_to 'トップページ', root_path %></li>
          <li><%= link_to 'ペットシッター一覧', petsitters_path %></li>
          <li><%= link_to 'ペットシッター新規登録', new_petsitter_path %></li>
          <li><%= link_to 'ユーザー詳細', user_path(current_user.id) %></li>
          <li><%= link_to 'ログアウト', logout_path, method: :delete %></li>
        <% else %>
          <!-- 未ログインユーザー用メニュー -->
          <li><%= link_to 'トップページ', root_path %></li>
          <li><%= link_to 'ペットシッター一覧', petsitters_path %></li>
          <li><%= link_to '新規登録', new_user_path %></li>
          <li><%= link_to 'ログイン', login_path %></li>
        <% end %>
      </ul>
    </nav>
  </header>

  <div class="home-content wrapper">
    <p2 class="page-title">評判のペットシッター探しなら<br>
      ペットシッターリスト</p2>
  </div>

  <div class="wrapper header-bottom">
    エリア・キーワードから探す
    <%= search_form_for(@q, url:petsitters_path, class: 'search-field') do |f| %>
      <!--キーワード検索-->
      <div class ="search-group">
        <%= f.search_field :address_cont, :placeholder => "エリア[例：新宿]", class: 'search-form' %>
      </div>
      <div class ="search-group">
        <%= f.search_field :name_or_pet_type_cont, :placeholder => "キーワード[例：うさぎ]", class: 'search-form' %>
      </div>
      <%= f.submit "検索" %>
    <% end %>
  </div>
</div>